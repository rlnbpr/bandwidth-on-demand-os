<html xmlns:spring="http://www.springframework.org/tags" xmlns:util="urn:jsptagdir:/WEB-INF/tags/util"
    xmlns:sec="http://www.springframework.org/security/tags" xmlns:jsp="http://java.sun.com/JSP/Page">

    <jsp:directive.page contentType="text/html;charset=UTF-8" />
    <jsp:output omit-xml-declaration="yes" />

    <div class="row">
        <div class="span8">
            <div class="hero-unit">
                <h1>Welcome NOC engineer</h1>
                <p>Welcome to SURFnet's Bandwidth on Demand user interface.</p>
                <p>Please select the task you want to perform as NOC engineer.</p>
            </div>
        </div>
        <div class="span4">
            <section>
                <h1>Common tasks</h1>
                <spring:url var="create_prg_url" value="/noc/physicalresourcegroups/create" />
                <spring:url var="manager_url" value="/manager" />
                <spring:url var="user_url" value="/" />
                <div class="content">
                    <ul class="tasks">
                        <li><a class="btn btn-primary" href="${create_prg_url}"><i class="icon-plus"><!--  --></i> <spring:message code="label_action_add_institute" /></a></li>
                    </ul>
                </div>
            </section>
        </div>
    </div>

</html>
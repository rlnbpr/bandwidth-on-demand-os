<html xmlns:spring="http://www.springframework.org/tags"
  xmlns:util="urn:jsptagdir:/WEB-INF/tags/util"
  xmlns:sec="http://www.springframework.org/security/tags"
  xmlns:jsp="http://java.sun.com/JSP/Page"
  xmlns:c="http://java.sun.com/jsp/jstl/core"
  xmlns:table="urn:jsptagdir:/WEB-INF/tags/table">

<jsp:directive.page contentType="text/html;charset=UTF-8" />
<jsp:output omit-xml-declaration="yes" />

<div class="row">
  <div class="span12">
    <section>
      <h1>
        Welcome NOC Engineer
        <util:timeZone />
      </h1>
      <div class="content">
        <h3>Report from <spring:eval expression="report.periodStart"/> - <spring:eval expression="report.periodEnd"/></h3>
      </div>
    </section>
  </div>
  <div>
    <section>
      <div class="content">
        <table id="idReport" class="table table-bordered">
          <thead>
            <td>Item</td>
            <td>Total</td>
            <td>Amount</td>
          </thead>
          <tbody>
            <tr>
              <td>Reservation Requests</td>
              <td>${report.totalReservationRequests}</td>
              <td>
                <table class="table  table-striped table-bordered">
                  <tr>
                    <td class="cw85">Failed</td>
                    <td class="right">${report.amountFailedReservationRequests}</td>
                  </tr>
                  <tr>
                    <td>Succeeded</td>
                    <td class="right">${report.amountSucceededReservationRequests}</td>
                  </tr>
                </table>
              </td>
            </tr>
            <tr>
              <td>Reservations</td>
              <td>${report.totalReservations}</td>
              <td>
                <table class="table  table-striped table-bordered">
                  <tr>
                    <td class="cw85">Protected</td>
                     <td class="right">${report.amountProtectedReservations}</td>
                  </tr>
                  <br />
                  <tr>
                    <td>Unprotected</td>
                    <td class="right">${report.amountUnprotectedReservations}</td>
                  </tr>
                  <tr>
                    <td>Redundant</td>
                    <td class="right">${report.amountRedundantReservations}</td>
                  </tr>
                </table> <br />
                <table class="table  table-striped table-bordered">
                  <tr>
                    <td class="cw85">NSI</td>
                    <td class="right">${report.amountNSIReservations}</td>
                  </tr>
                  <tr>
                    <td>GUI</td>
                    <td class="right">${report.amountGUIReservations}</td>
                  </tr>
                </table> <br />
                <table class="table  table-striped table-bordered">
                <tr>
                    <td class="cw85">Execution succeeded</td>
                    <td class="right">${report.amountSucceededReservations}</td>
                  </tr>
                  <tr>
                    <td>Execution cancelled</td>
                    <td class="right">${report.amountCancelledReservations}</td>
                  </tr>
                  <tr>
                    <td>Execution failed</td>
                    <td class="right">${report.amountFailedReservations}</td>
                  </tr>
                </table>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>
</html>
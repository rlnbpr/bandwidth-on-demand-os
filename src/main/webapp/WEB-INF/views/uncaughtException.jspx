<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:bod="BodTags"
    xmlns:c="http://java.sun.com/jsp/jstl/core" version="2.0">

<jsp:directive.page contentType="text/html;charset=UTF-8" />
<jsp:output omit-xml-declaration="yes" />

<util:modal titleCode="error_uncaughtexception_title" messageCode="error_uncaughtexception_problemdescription" />

<bod:env property="development" var="dev" />

<c:if test="${dev}">
    <div class="stacktrace">
        <h1>${exception.message}</h1>
        <c:forEach items="${exception.stackTrace}" var="trace">
            <c:out value="${trace}" />
            <br />
        </c:forEach>
    </div>
</c:if>


</html>
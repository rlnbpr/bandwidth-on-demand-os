            <!-- Generates the classes for IDD based on the wsdl -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>axistools-maven-plugin</artifactId>
                <version>1.4</version>
                <configuration>
                    <packageSpace>nl.surfnet.bod.idd.generated</packageSpace>
                    <sourceDirectory>src/main/resources/wsdl/idd</sourceDirectory>
                    <outputDirectory>target/generated-sources/axis/wsdl2code</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>idd-ws</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>1.12</version>
                <executions>
                    <execution>
                        <id>ogf_nsi_connection_provider</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <verbose>true</verbose>
                            <keep>true</keep>
                            <xnocompile>true</xnocompile>
                            <wsdlDirectory>${basedir}src/main/webapp/WEB-INF/wsdl/nsi</wsdlDirectory>
                            <wsdlFiles>
                                <wsdlFile>ogf_nsi_connection_provider_v1_0.wsdl</wsdlFile>
                            </wsdlFiles>
                            <sourceDestDir>${project.build.directory}/generated-sources/jaxws/</sourceDestDir>
                            <destDir />
                            <wsdlLocation>src/main/webapp/WEB-INF/wsdl/nsi/ogf_nsi_connection_provider_v1_0.wsdl</wsdlLocation>
                            <staleFile>${project.build.directory}/generated-sources/jaxws/stale/ogf_nsi_connection_provider.done
                            </staleFile>
                        </configuration>
                    </execution>

                    <execution>
                        <id>ogf_nsi_connection_requester</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <verbose>true</verbose>
                            <keep>true</keep>
                            <xnocompile>true</xnocompile>
                            <wsdlDirectory>${basedir}/src/main/webapp/WEB-INF/wsdl/nsi</wsdlDirectory>
                            <wsdlFiles>
                                <wsdlFile>ogf_nsi_connection_requester_v1_0.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <sourceDestDir>${project.build.directory}/generated-sources/jaxws/</sourceDestDir>
                            <destDir />
                            <wsdlLocation>src/main/webapp/WEB-INF/wsdl/nsi/ogf_nsi_connection_requester_v1_0.wsdl</wsdlLocation>
                            <staleFile>${project.build.directory}/generated-sources/jaxws/stale/ogf_nsi_connection_requester.done</staleFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb22-plugin</artifactId>
                <version>0.8.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>${basedir}/src/main/resources/schema

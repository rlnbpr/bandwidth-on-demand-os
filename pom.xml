                            <exclude>org/opendrac/www/**/*.class</exclude>
                            <exclude>org/oasis_open/**/*.class</exclude>
                            <exclude>org/xmlsoap/schemas/**/*.class</exclude>
                            <exclude>schemaorg_apache_xmlbeans/**/*.class</exclude>
                            <exclude>org/w3/www/**/*.class</exclude>
